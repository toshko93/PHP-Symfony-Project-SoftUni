{% extends 'base.html.twig' %}

{% block body %}
    <div class="container body-content">
        <div class="row well">
            <div class="col-lg-12">
                <div class="col-lg-3">
                    <h2>All Contracts</h2>
                </div>
                <div class="col-lg-9" style="margin-top: 24px;">
                    <input type="text" id="search-job-input" />
                    <button>Search</button>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="col-lg-3">
                    <h3>Categories</h3>
                    <h3>Filters</h3>
                </div>
                <div class="col-lg-9">
                    {% for contract in contracts %}
                        <div class="col-md-12">
                            <article class="job-post-box-small">
                                <header>
                                    Contract for: <a href="{{ path('single_contract_view', {'id': contract.id}) }}"><h2>{{ contract.jobPost.jobTitle }}</h2></a>
                                </header>

                                <p>
                                    {{ contract.jobPost.jobDescription }}
                                </p>

                                <small class="author">
                                    {{ contract.jobPost.client.getFirstName }} {{ contract.jobPost.client.getLastName }}
                                </small>

                                <footer>
                                    <div class="pull-right">
                                        <a class="btn btn-default btn-xs"
                                           href="{{ path('single_job_post_view', {'id': contract.jobPost.id}) }}">Read more &raquo;</a>
                                    </div>
                                </footer>
                            </article>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}