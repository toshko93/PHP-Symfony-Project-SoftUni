{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="row well">
            <h1>New Job Post Proposal</h1>
            <form class="form-horizontal" action="{{ path('proposal_create', {id: jobPost.id}) }}" method="POST">
                <fieldset>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="cover_letter">Cover Letter</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="cover_letter"
                                  name="proposal[coverLetter]" placeholder="Add your cover letter here..."></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="proposed_price">Your Price</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="proposed_price" placeholder="Your price for the project"
                                   name="proposal[proposedPrice]">
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('homepage') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}