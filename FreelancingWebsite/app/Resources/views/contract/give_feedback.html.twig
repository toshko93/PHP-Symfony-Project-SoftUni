{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="row well">
            <h1><strong>Give feedback for contract:</strong> <a href="{{ path('single_contract_view', {id: contract.id}) }}">{{ contract.jobPost.jobTitle }}</a></h1>
            <form class="form-horizontal" action="{{ path('give_feedback', {id: contract.id}) }}" method="POST">
                <fieldset>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="feedback_text">Feedback</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="feedback_text"
                                  name="feedback[feedbackText]" placeholder="Give some feedback about the user..."></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="feedback_score">Score</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="feedback_score" placeholder="Give score from 0 to 5"
                                   name="feedback[feedbackScore]">
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('single_contract_view', {id: contract.id}) }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}