{% extends 'base.html.twig' %}

{% block body %}
    <div class="container body-content">
        <div class="row well">
            <div class="inner-box-wrapper">
                <div class="col-md-12">
                    <article>

                        <div class="col-lg-12">
                            <div class="col-lg-3">
                                <h2>All Freelancers</h2>
                            </div>
                            <div class="col-lg-9" style="margin-top: 24px;">
                                <input type="text" id="search-job-input" />
                                <button>Search</button>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="col-lg-3">
                                <h3>Categories</h3>
                                <h3>Filters</h3>
                            </div>
                            <div class="col-lg-9">
                                {% for freelancer in freelancers %}
                                    <article class="job-post-box-small">
                                        <div class="col-lg-2">
                                            <img src="{{ asset('apple-touch-icon.png') }}" style="width: 100%; height: 100%"/>
                                        </div>
                                        <div class="col-lg-8">
                                            <header>
                                                <a href="{{ path('freelancer_profile_view', {'id': freelancer.id}) }}"><h3>{{ freelancer.firstName }} {{ freelancer.lastName }}</h3></a>
                                            </header>

                                            <p>
                                                "Job Title"
                                            </p>

                                            <p>
                                                "Success Score" | "Money Earned" | "Country/Location"
                                            </p>

                                            <p>
                                                {{ freelancer.email }}
                                            </p>
                                        </div>
                                        <div class="col-lg-2">
                                            <div class="pull-right">
                                                <a class="btn btn-default btn-xs"
                                                   href="{{ path('freelancer_profile_view', {'id': freelancer.id}) }}">View Profile&raquo;</a>
                                            </div>
                                        </div>
                                    </article>
                                {% endfor %}
                            </div>
                        </div>

                    </article>
                </div>
            </div>
        </div>
    </div>
{% endblock %}