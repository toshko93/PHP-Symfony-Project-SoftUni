{% extends 'base.html.twig' %}

{% block body %}
    <div class="container body-content">
        <div class="row well">
            <h1>My Contracts</h1>
            {% for contract in myContracts %}
                <div class="col-md-12">
                    <article>
                        <header>
                            Contract for: <a href="{{ path('single_contract_view', {'id': contract.id}) }}"><h2>{{ contract.jobPost.jobTitle }}</h2></a>
                        </header>

                        <p>
                            {{ contract.jobPost.jobDescription }}
                        </p>

                        <small class="author">
                            {{ contract.jobPost.client.getFirstName }} {{ contract.jobPost.client.getLastName }}
                        </small>

                        <footer>
                            <div class="pull-right">
                                <a class="btn btn-default btn-xs"
                                   href="{{ path('single_job_post_view', {'id': contract.jobPost.id}) }}">Read more &raquo;</a>
                            </div>
                        </footer>
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}